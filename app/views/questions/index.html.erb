<h1>Questions</h1>

<div class="row">
    <div class="col-md-12">
        <table class="table table-stiped">
            <thead class="thead-light">   
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Menu</th>
                </tr>
                <td>
                    <% @questions.each do |question| %>
                        <tr>
                            <td><%= question.id %></td>
                            <td><%= link_to question.title, question_path(question), method: :get %></td>
                            <td>[<%= link_to 'Edit', edit_question_path(question) %>]
                             [<%= link_to 'Delete', question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %>]</td>
                        </tr>
                    <% end %>
                </td>
        </table>
    </div>
</div>

<button type="button" class="btn btn-primary rounded-circle p-0" style="width:3rem;height:3rem;"
onclick="location.href='questions/new'">ï¼‹</button>
